<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity0">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="打开0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/to_one" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/to_two"/>
    <Button
            android:text="打开1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/to_two"
            app:layout_constraintStart_toEndOf="@+id/to_one" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/to_three" app:layout_constraintTop_toTopOf="@+id/to_one"/>
    <Button
            android:text="打开2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/to_three" app:layout_constraintStart_toEndOf="@+id/to_two"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/to_two"/>

</android.support.constraint.ConstraintLayout>